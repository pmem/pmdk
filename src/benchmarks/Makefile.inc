LIBS =
INCS =
DEFS =
CFLAGS = -std=gnu99 -Wall -Werror -O3

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) -o $@ $(OBJS) $(LIBS)

%.o: %.c
	$(CC) -c $(CFLAGS) $(INCS) $(DEFS) $< -o $@

clean:
	$(RM) *.o */*.o *.out *.png *.tmp

clobber: clean
	$(RM) $(TARGET) $(ADD_TARGETS)

cstyle:
	$(CSTYLE) -pP *.[ch]

.PHONY: all clean clobber cstyle
