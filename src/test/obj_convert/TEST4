#
# src/test/obj_convert/TEST4 -- unit test for pool conversion
#

# standard unit test setup
. ../unittest/unittest.sh

LOG=out${UNITTEST_NUM}.log
rm -f $LOG && touch $LOG

require_command gdb
require_test_type medium
require_build_type debug
require_fs_type non-pmem

setup

# set this to enable runtime creation of pools based on the old version of
# the library.
#PATH_TO_1_0_DBG=/path/to/pmdk_1.0/debug

POOLSET=$DIR/testset1

if ! [ -z ${PATH_TO_1_0_DBG+x} ];
then
	create_poolset $POOLSET 32M:$DIR/testfile1:z r\
				32M:$DIR/testfile2:z

	LD_LIBRARY_PATH=$PATH_TO_1_0_DBG ./obj_convert$EXESUFFIX $POOLSET cs 1

	echo -e "y\n" | expect_normal_exit\
		$PMEMPOOL$EXESUFFIX convert $POOLSET &> /dev/null

	compare_replicas "-soOaAbd -l -Z -H -C" \
		$DIR/testfile1 $DIR/testfile2 > diff$UNITTEST_NUM.log

	expect_normal_exit $PMEMPOOL$EXESUFFIX info $POOLSET &> /dev/null

	check
fi

pass
