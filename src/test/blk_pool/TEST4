#
# src/test/blk_pool/TEST4 -- unit test for pmemblk_create
#

. $UNITTEST_SH

require_test_type medium

setup
umask 0

touch $DIR/testfile
chmod 0640 $DIR/testfile

#
# TEST4 existing file, file length < min required size, poolsize == 0
#
expect_normal_exit ./blk_pool$EXESUFFIX c $DIR/testfile 4096 0 0640

check_files $DIR/testfile

check

pass
